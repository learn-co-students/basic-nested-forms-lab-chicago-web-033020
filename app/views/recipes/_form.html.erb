<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
 
  <%= f.fields_for :ingredients do |ind| %>
    <%= ind.label :name %>
    <%= ind.text_field :name %><br>
 
    <%= ind.label :quantity %>
    <%= ind.text_field :quantity %><br>
  <% end %>
 
  <%= f.submit %>
<% end %>
