<h1>Recipe Partial Form</h1>

<%= form_for @recipe do |f| %>
 <%= f.label :title %>
 <%= f.text_field :title %><br>

<h2>Ingredients</h2>
  <%= f.fields_for :ingredients do |ingrd| %>
    <%= ingrd.label :name %>
    <%= ingrd.text_field :name %><br>

    <%= ingrd.label :quantity %>
    <%= ingrd.text_field :quantity %><br>

    <% end %>


<%= f.submit %>
<% end %>